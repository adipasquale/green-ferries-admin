{
  "name": "greenferries-www",
  "version": "0.0.1",
  "description": "Greenferries frontend - Find ferries that emit less CO2 - static website built with eleventy",
  "main": "index.js",
  "repository": "https://github.com/greenferries/greenferries",
  "author": "Adrien Di Pasquale",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.x",
    "@tailwindcss/typography": "^0.x",
    "postcss-clean": "^1.x",
    "postcss-cli": "^10.x",
    "tailwindcss": "^3.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf _site",
    "start": "npm-run-all clean --parallel dev:*",
    "dev:css": "tailwind --input assets/css/index.css --output _site/css/index.css --postcss --watch",
    "dev:eleventy": "node --max_old_space_size=8192 node_modules/.bin/eleventy --serve",
    "build": "NODE_ENV=production npm-run-all clean --parallel prod:*",
    "prod:css": "tailwind --input assets/css/index.css --output _site/css/index.css --postcss",
    "prod:eleventy": "ELEVENTY_ENV=production node --max_old_space_size=8192 node_modules/.bin/eleventy --output=./_site",
    "lint": "standard"
  },
  "standard": {
    "ignore": [
      "/assets/js/vendor/*"
    ]
  },
  "devDependencies": {
    "debug": "^4.2.0",
    "npm-run-all": "^4.1.2",
    "request": "^2.88.2",
    "standard": "^17.1.0"
  }
}
