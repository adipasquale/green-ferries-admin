---
pagination:
    data: companies
    size: 1
    alias: rawCompany
    resolve: values
permalink: "companies/{{ rawCompany.slug }}/"
---
{% extends "_includes/layout.njk" %}
{%- set company = hydratedBySlug.companies[rawCompany.slug] %}

{% block title %}
  GreenFerries - {{ company.name }}
{% endblock %}

{% block content %}
  <div class="container mx-auto mb-4 p-2">
    <h2 class="text-xl font-bold mb-4 flex items-center">
      <div>
        {{ company.name }}
        -
        {{ company.country | countryCodeToFlag }}
      </div>
      {% if company.logoFileName %}
        <div class="ml-4">
          <img src="/img/company_logos/{{ company.logoFileName }}" class="h-12 w-64" />
        </div>
      {% endif %}
    </h2>

    {% if company.wikipediaUrl %}
      <p class="mb-4">
        <a href="{{ company.wikipediaUrl }}" class="link">
          See on Wikipedia â†—
        </a>
      </p>
    {% endif %}

    <h4 class="text-l font-bold mb-3">{{ company.ships | length }} ships</h4>
    {% set ships = company.ships %}
    {% include "_includes/ship_cards.njk" %}
  </div>
{% endblock %}
