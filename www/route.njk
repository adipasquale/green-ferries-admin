---
pagination:
    data: routes
    size: 1
    alias: route
permalink: "routes/{{ route.slug }}/"
---

{% extends "_includes/layout.njk" %}

{% block title %}
  GreenFerries - {{ route.cityA.name }} â†” {{ route.cityB.name }}
{% endblock %}

{% block content %}
  <div class="container mx-auto mb-4 p-2">
    <h2 class="text-xl mb-4">
      <span class="font-bold">{{ route | fullRouteName }}</span>
      ({{ route.distanceKm }} km)
    </h2>

    <p>{{ route.shipsCount }} ships often travel on this route</p>

    <ul class="mt-4 flex flex-wrap justify-around sm:justify-start">
      {% for shipRoute in route.shipRoutes %}
        {% set ship = shipRoute.ship %}
        {% include "_includes/ship_card.njk" %}
      {% endfor %}
    </ul>
  </div>

  <pre class="hidden" id="js-debug">{{ route | jsonify }}</pre>
  <script>console.log(document.getElementById("js-debug").innerHTML)</script>
{% endblock %}
