---
pagination:
    data: routes
    size: 1
    alias: route
permalink: "routes/{{ route.slug }}/"
---

{% extends "_includes/layout.njk" %}

{% block title %}
  GreenFerries - {{ route.cityA.name }} â†” {{ route.cityB.name }}
{% endblock %}

{% block content %}
  <div class="container mx-auto mb-4 p-2">
    <h2 class="text-xl mb-4">
      <span class="font-bold">{{ route | fullRouteName }}</span>
      ({{ route.distanceKm }} km)
    </h2>

    <p>{{ route.shipsCount }} ships often travel on this route</p>

    {% set ships = route.shipRoutes | extractShips %}
    {% include "_includes/ship_cards.njk" %}
  </div>
{% endblock %}
